@model Atlas.Models.SetPasswordViewModel
@{
    ViewBag.Title = "Create Password";
}

<div class="container">
    <div class="col-md-offset-4 col-sm-offset-1">
        <h2>@ViewBag.Title</h2>
        <hr />
        @using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
            {
                <div class="row">
                    <div class="col-md-8 col-sm-6 alert alert-error">
                        <button type="button" class="close" data-dismiss="alert" style="font-size:14px">close X</button>
                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                    </div>
                </div>
            }
            if (ViewBag.Status != null && ViewBag.Status)
            {
                <div class="row">
                        <div class="col-md-8 col-sm-6 alert alert-success">
                            <strong>
                                <span class="glyphicon glyphicon-check">&nbsp;</span>
                                @Atlas.Models.BusinessConstants.PasswordUpdated
                            </strong>
                    </div>
                </div>
            }

            if (ViewBag.Status ==null || !ViewBag.Status)
            {
            <br />
                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.NewPassword, new { @class = "control-label", style = "padding:0px" })<span class="required">*</span>
                                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label", style = "padding:0px" })<span class="required">*</span>
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5" style="margin-left: inherit">
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <input type="submit" value="Set password" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                        </div>

            }
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
