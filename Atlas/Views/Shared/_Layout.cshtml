<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @{Html.RenderAction("_MenuPartial", "partial");}

    <div style="clear: both"></div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $(function () {
            window.onload = function () {
                var activemenu = window.location.href.split('/')[4].toLowerCase();
                activemenu = activemenu == "company" ? "customers" : activemenu;
                activemenu = activemenu == "project" ? "projects" : activemenu;
                $(".submenu").each(function (index, el) {
                    if (index ==0 && activemenu == "" || activemenu == undefined || activemenu == null) {
                        $(this).children().css('color', "#0e2d4c");
                    }
                    else if(activemenu == el.children[0].text.toLowerCase())
                    {
                        $(this).children().css('color', "#0e2d4c");
                    }
                });
            }
        });
    </script>
</body>
</html>
